<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                    pattern="%d{DEFAULT} [%highlight{%level{length=4}}] %style{%pid}{FG_Magenta} [%t] %style{%c}{FG_CYAN}: %m%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="Testing" level="trace">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <Logger name="Request-Logging" level="warn">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <Root level="warn">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>